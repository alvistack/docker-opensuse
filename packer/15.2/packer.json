{
    "builders": [
        {
            "type": "docker",
            "image": "opensuse/leap:15.2",
            "commit": true,
            "changes": [
                "ENV LANG en_US.UTF-8",
                "ENV LC_ALL en_US.UTF-8",
                "ENV SHELL /bin/bash",
                "ENV TZ UTC",
                "VOLUME /root",
                "WORKDIR /root",
                "EXPOSE 22",
                "ENTRYPOINT [\"catatonit\", \"-g\",  \"--\",  \"docker-entrypoint.sh\"]",
                "CMD [\"/usr/sbin/sshd\", \"-eD\"]"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "set -ex",
                "zypper -n --gpg-auto-import-keys refresh",
                "zypper -n install -y systemd systemd-sysvinit",
                "rm -f /etc/systemd/system/*.wants/*",
                "rm -f /usr/lib/systemd/system/basic.target.wants/*",
                "rm -f /usr/lib/systemd/system/local-fs.target.wants/*",
                "rm -f /usr/lib/systemd/system/multi-user.target.wants/*",
                "rm -f /usr/lib/systemd/system/sockets.target.wants/*initctl*",
                "rm -f /usr/lib/systemd/system/sockets.target.wants/*udev*",
                "rm -f /usr/lib/systemd/system/sysinit.target.wants/systemd-tmpfiles-setup.service",
                "zypper clean --all"
            ]
        },
        {
            "type": "ansible",
            "playbook_file": "./packer.yml",
            "inventory_directory": "./",
            "galaxy_file": "./ansible-galaxy-requirements.yml"
        }
    ]
}
